{{ ansible_managed | comment }}

server {
    server_name {{ other_public_hostname }};
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/{{ other_public_hostname }}/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/{{ other_public_hostname }}/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    rewrite ^(.*) https://{{ public_hostname }} permanent;
}

server {
    server_name {{ public_hostname }};

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/{{ public_hostname }}/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/{{ public_hostname }}/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    access_log /var/log/nginx/access_{{ public_hostname.replace('.', '_') }}.log;
    error_log /var/log/nginx/error_{{ public_hostname.replace('.', '_') }}.log;

    # http://stackoverflow.com/questions/15238506/djangos-suspiciousoperation-invalid-http-host-header
    # Deny illegal Host headers
    if ($host !~* ^({{ public_hostname }}|{{other_public_hostname}})$ ) {
        return 444;
    }

    error_page 404 /404.html;
    location = /404.html {
        root {{ frontend_static_path }};
    }

    location / {
        autoindex off;
        root {{ frontend_static_path }};
    }
}

server {
    if ($host = {{ public_hostname }}) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    if ($host = {{ other_public_hostname }}) {
         return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name {{ public_hostname }} {{ other_public_hostname }};
    return 404; # managed by Certbot
}
