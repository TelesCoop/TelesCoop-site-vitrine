---
pagination:
    data: projects
    size: 1
    alias: project
    filter:
        - all
        - post
        - posts
        - tagList
description: Les projets que nous avons fièrement réalisés.
layout: layout.html
pageWeight: 130
eleventyComputed:
    description: Le projet que nous avons développé pour {{ project.clientName }}
    title: {{ project.title | slugify }}
permalink: /projet/{{ project.title | slugify }}/
---
<div class="project section">
    <div class="columns">
        <div class="column is-6">
            <h1 class="is-family-code">{{ project.title }}</h1>
            {% for tag in project.categories %}
                {% render "category.html", category:categories[tag] %}
            {% endfor %}
            <div class="is-divider"></div>
            {% render "tags.html", tags:project.tags %}
        </div>
        <div class="column is-6">
            <div class="image-holder">
                <img src="{{ project.projectThumbnail }}" alt="">a
            </div>

        </div>
    </div>
    {% render "project-page/nutshell.html", project:project %}
{% comment %}    {% render "project-page/about.html", project:project %}
{% endcomment %}    {% render "project-page/description.html", project:project %}
    {% render "project-page/discover.html", project:project %}
    {% render "project-page/testimony.html", project:project %}
</div>
