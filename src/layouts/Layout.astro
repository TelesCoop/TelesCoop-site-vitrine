---
import { getEntry } from 'astro:content';
import ColorPaletteSwitcher from '../components/ColorPaletteSwitcher.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  hideLogo?: boolean;
}

const { title, description, hideLogo = false } = Astro.props;
const metadata = await getEntry('data', 'metadata');
const metadataData = metadata?.data || {};

const pageTitle = title ? `TelesCoop - ${title}` : metadataData.title;
const pageDescription = description || metadataData.description;
const currentUrl = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://fonts.googleapis.com/css2?family=Anton:wght@300;400;500;600;700&family=Barlow+Condensed:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="canonical" href={currentUrl} />

    <!-- Favicon -->
    <link
      rel="icon"
      type="image/png"
      sizes="64x64"
      href="/img/logo_square.png"
    />
    <link rel="manifest" href="/img/favicon/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#ffc40d" />
    <meta
      name="msapplication-config"
      content="/img/favicon/browserconfig.xml"
    />
    <meta name="theme-color" content="#ffffff" />

    <!-- Open graph protocol (Facebook) -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:image" content="https://telescoop.fr/img/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:site_name" content="TelesCoop" />
    <meta property="og:locale" content="fr_FR" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content="https://telescoop.fr/img/og-image.png" />
    <meta name="twitter:site" content="@TelesCoop" />

    <!-- Additional SEO meta tags -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="author" content="TelesCoop" />
    <meta name="language" content="fr" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "TelesCoop",
      "url": "https://telescoop.fr",
      "logo": "https://telescoop.fr/img/logo.svg",
      "description": pageDescription,
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "FR"
      },
      "sameAs": [
        "https://github.com/TelesCoop",
        "https://twitter.com/TelesCoop"
      ],
      "foundingDate": "2020",
      "legalName": "TelesCoop",
      "contactPoint": {
        "@type": "ContactPoint",
        "email": "contact@telescoop.fr",
        "contactType": "customer service"
      },
      "makesOffer": {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Développement web et applicatif",
          "description": "Développement de sites web, outils métier et applications pour projets engagés"
        }
      }
    })} />

    <script data-domain="telescoop.fr" src="/js/telescoop.js"></script>
    <script
      defer
      data-domain="telescoop.fr"
      src="https://plausible.io/js/plausible.js"
    ></script>
  </head>

  <body class="grain-texture">
    <a href="#main-content" class="skip-to-content">
      Aller au contenu principal
    </a>
    <slot name="header" />
    <main id="main-content">
      <slot />
    </main>
    <slot name="footer" />
    <ColorPaletteSwitcher />
  </body>
</html>

<style>
  .skip-to-content {
    position: absolute;
    left: -9999px;
    z-index: 999;
    padding: 1rem 1.5rem;
    background-color: var(--color-orange);
    @apply text-black;
    text-decoration: none;
    border-radius: 0 0 0.5rem 0.5rem;
    font-weight: bold;
  }

  .skip-to-content:focus {
    left: 50%;
    transform: translateX(-50%);
    top: 0;
  }
</style>
