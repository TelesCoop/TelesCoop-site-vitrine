---
import { getEntry } from 'astro:content';
import ColorPaletteSwitcher from '../components/ColorPaletteSwitcher.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  hideLogo?: boolean;
}

const { title, description, hideLogo = false } = Astro.props;
const metadata = await getEntry('data', 'metadata');
const metadataData = metadata?.data || {};

const pageTitle = title ? `TelesCoop - ${title}` : metadataData.title;
const pageDescription = description || metadataData.description;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://fonts.googleapis.com/css2?family=Anton:wght@300;400;500;600;700&family=Barlow+Condensed:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />

    <!-- Favicon -->
    <link
      rel="icon"
      type="image/png"
      sizes="64x64"
      href="/img/logo_square.png"
    />
    <link rel="manifest" href="/img/favicon/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#ffc40d" />
    <meta
      name="msapplication-config"
      content="/img/favicon/browserconfig.xml"
    />
    <meta name="theme-color" content="#ffffff" />

    <!-- Open graph protocol (Facebook) -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://telescoop.fr/" />
    <meta property="og:image" content="https://telescoop.fr/img/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:site_name" content="TelesCoop" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content="https://telescoop.fr/img/og-image.png" />

    <script data-domain="telescoop.fr" src="/js/telescoop.js"></script>
    <script
      defer
      data-domain="telescoop.fr"
      src="https://plausible.io/js/plausible.js"
    ></script>
  </head>

  <body class="grain-texture">
    <a href="#main-content" class="skip-to-content">
      Aller au contenu principal
    </a>
    <slot name="header" />
    <main id="main-content">
      <slot />
    </main>
    <slot name="footer" />
    <ColorPaletteSwitcher />
  </body>
</html>

<style>
  .skip-to-content {
    position: absolute;
    left: -9999px;
    z-index: 999;
    padding: 1rem 1.5rem;
    background-color: var(--color-orange);
    @apply text-black;
    text-decoration: none;
    border-radius: 0 0 0.5rem 0.5rem;
    font-weight: bold;
  }

  .skip-to-content:focus {
    left: 50%;
    transform: translateX(-50%);
    top: 0;
  }
</style>
