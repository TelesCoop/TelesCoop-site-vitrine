---
interface Skill {
  name: string;
  src: string;
  description: string;
  items?: string[];
}

interface Props {
  skills: Skill[];
}

const { skills } = Astro.props;
---

<section class="px-4">
  <div class="container mx-auto">
    <div class="mb-12">
      <span class="tag">
        Notre offre
      </span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {skills.map((skill, index) => (
        <div class="card flex-col items-center text-center p-6">
          <img
            src={skill.src}
            alt={skill.name}
            class="w-64 h-44 object-contain mb-4"
          />
          <span class="text-5xl font-bold text-accent-orange mb-2">
            {index + 1}
          </span>
          <h3 class="text-2xl uppercase font-normal mb-3">
            {skill.name}
          </h3>
          <p class="text-black">{skill.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
