---
interface Measure {
  value: string;
  description: string;
}

interface Props {
  measures: Measure[];
}

const { measures } = Astro.props;
---

<section class="py-16 px-4">
  <div class="container mx-auto">
    <div class="mb-12">
      <span class="inline-block bg-gray-100 px-4 py-2 rounded-full text-sm font-medium">
        Nos mesures d'impact
      </span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {measures.map((measure) => (
        <div class="flex flex-col p-6 text-center">
          <span class="text-5xl md:text-6xl font-bold text-accent-orange mb-4">
            {measure.value}
          </span>
          <span class="text-lg text-gray-700">
            {measure.description}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
