---
interface Measure {
  value: string;
  description: string;
}

interface Props {
  measures: Measure[];
}

const { measures } = Astro.props;
---

<section class="px-4">
  <div class="container mx-auto">
    <div class="mb-12">
      <span class="tag tag-purple tag-xl">
        Nos mesures d'impact
      </span>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 gap-8">
      {measures.map((measure, index) => {
        const colors = ['bg-orange', 'bg-blue', 'bg-green', 'bg-green', 'bg-yellow'];
        const colorClass = colors[index % colors.length];
        return (
          <div class={`card flex-col p-4 md:p-6 text-center ${index % 2 === 0 ? 'rotate-left' : 'rotate-right'}`}>
            <span class={`w-full text-center text-3xl md:text-4xl lg:text-5xl ${colorClass} mb-4 font-display rounded-lg px-3 py-2 text-white inline-block`}>
              {measure.value}
            </span>
            <span class="text-base md:text-lg lg:text-2xl font-semibold">
              {measure.description}
            </span>
          </div>
        );
      })}
    </div>
  </div>
</section>
