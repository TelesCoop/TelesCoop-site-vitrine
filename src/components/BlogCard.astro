---
interface Props {
  article: {
    title: string;
    date: string;
    readTime: number;
    excerpt: string;
    categories?: string[];
  };
  categories?: Record<string, any>;
}

const { article, categories } = Astro.props;

function slugify(text: string) {
  return text
    .toString()
    .toLowerCase()
    .trim()
    .replace(/\s+/g, '-')
    .replace(/[^\w\-]+/g, '')
    .replace(/\-\-+/g, '-');
}

function getCategoryColor(categoryName: string) {
  const category = categories?.[categoryName];
  const colorMap: Record<string, string> = {
    'grey': 'bg-gray-600',
    'orange': 'bg-accent-orange',
    'yellow': 'bg-accent-yellow',
    'danger': 'bg-red-600',
    'info': 'bg-blue-600',
    'success': 'bg-green-600',
    'blue': 'bg-accent-blue',
  };
  return colorMap[category?.colorClass] || 'bg-gray-600';
}

function getCategoryTextColor(categoryName: string) {
  const category = categories?.[categoryName];
  return category?.textWhite ? 'text-white' : 'text-black';
}

const formattedDate = new Date(article.date).toLocaleDateString('fr-FR');
---

<a
  href={`/blog/${slugify(article.title)}/`}
  class="card flex-col p-6"
>
  <h3 class="text-xl mb-3 font-semibold">
    {article.title}
  </h3>

  <div class="text-sm mb-3 opacity-80">
    <p>{formattedDate} Â· {article.readTime} min</p>
  </div>

  {article.categories && article.categories.length > 0 && (
    <div class="flex flex-wrap gap-2 mb-4">
      {article.categories.map((cat) => (
        <span class="badge">
          {categories?.[cat]?.name || cat}
        </span>
      ))}
    </div>
  )}

  <p class="mt-auto">{article.excerpt}</p>
</a>
