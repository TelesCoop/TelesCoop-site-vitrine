---
import Logo from "./Logo.astro";
interface Props {
  pageWeight?: number;
}

const { pageWeight } = Astro.props;
---

<footer class="bg-black text-white py-12 mt-24">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-8">
      <!-- Logo et description -->
      <div>
        <Logo class="!text-beige" />
        <p class="text-white/80 text-lg">
          Coopérative de développement pour des projets engagés
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="text-xl font-semibold mb-4">Navigation</h3>
        <ul class="space-y-2">
          <li><a href="/coopérative" class="text-white/80 hover:text-red transition-colors">La coopérative</a></li>
          <li><a href="/projets" class="text-white/80 hover:text-red transition-colors">Nos projets</a></li>
          <li><a href="/blog" class="text-white/80 hover:text-red transition-colors">Blog</a></li>
          <li><a href="mailto:contact@telescoop.fr" class="text-white/80 hover:text-red transition-colors">Nous contacter</a></li>
        </ul>
      </div>

      <!-- Contact et infos -->
      <div>
        <h3 class="text-xl font-semibold mb-4">Contact</h3>
        <ul class="space-y-2 text-white/80">
          <li>
            <a href="mailto:contact@telescoop.fr" class="hover:text-red transition-colors">
              contact@telescoop.fr
            </a>
          </li>
          <li class="mt-4">
            <a href="/mentions-legales" class="hover:text-red transition-colors">
              Mentions légales
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-white/20 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-white/60 text-sm">
        © {new Date().getFullYear()} TelesCoop - SCOP
      </p>
      <p class="text-white/60 text-sm text-center">
        Site écoconçu · {pageWeight && <span>Poids de la page : ~{pageWeight}ko</span>}
      </p>
    </div>
  </div>
</footer>
