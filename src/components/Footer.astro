    </div>
  </div>
</footer>

<script>
  // Calculate page weight dynamically
  async function calculatePageWeight() {
    try {
      let totalSize = 0;

      // Calculate HTML size
      const htmlSize = new Blob([document.documentElement.outerHTML]).size;
      totalSize += htmlSize;

      // Get all resources loaded by the page
      const resources = performance.getEntriesByType('resource');

      for (const resource of resources) {
        if ('transferSize' in resource) {
          totalSize += (resource as PerformanceResourceTiming).transferSize;
        }
      }

      // Convert to KB
      const sizeInKB = Math.round(totalSize / 1024);

      // Update the display
      const weightElement = document.getElementById('page-weight');
      if (weightElement) {
        weightElement.textContent = `Poids de la page : ~${sizeInKB}ko`;
      }
    } catch (error) {
      console.error('Error calculating page weight:', error);
      const weightElement = document.getElementById('page-weight');
      if (weightElement) {
        weightElement.textContent = 'Poids de la page : calcul impossible';
      }
    }
  }

  // Wait for page to be fully loaded, then add a small delay to ensure all resources are accounted for
  if (document.readyState === 'complete') {
    setTimeout(calculatePageWeight, 1000);
  } else {
    window.addEventListener('load', () => {
      setTimeout(calculatePageWeight, 1000);
    });
  }
</script>
